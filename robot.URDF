<robot name="robotarm">

    <!-- Base link:
        Represents the origin of the coordinate system. -->
    <link name="base_link">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.144396264939993" />
        <inertia
            ixx="0.000143518614192769"
            ixy="-3.10732239576783E-12"
            ixz="-6.67605359934269E-06"
            iyy="0.000155552709433615"
            iyz="-3.29481748801136E-12"
            izz="0.000258792041913219" />
    </link>

    <!-- Ground bone:
        Represents the ground/bottom of the base platform. -->
    <link name="ground">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.144396264939993" />
        <inertia
            ixx="0.000143518614192769"
            ixy="-3.10732239576783E-12"
            ixz="-6.67605359934269E-06"
            iyy="0.000155552709433615"
            iyz="-3.29481748801136E-12"
            izz="0.000258792041913219" />
    </link>

    <!-- Floor joint:
        Represents the connection between the bottom of the rotating base platform and the ground and 
        provides the rotation of the base platform. -->
    <joint name="floor" type="revolute">
        <!-- <limit lower="0.0" upper="270.0" effort="0.0" velocity="0.0"/> -->
        <!-- <limit lower="0.0" upper="270.0" effort="0.0" velocity="0.0"/> -->
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="ground" />
        <axis xyz="0 0 1" />
    </joint>

    <!-- Platform bone:
        Represents the rotating base platform. -->
    <link name="platform">
        <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.144396264939993" />
        <inertia
            ixx="0.000143518614192769"
            ixy="-3.10732239576783E-12"
            ixz="-6.67605359934269E-06"
            iyy="0.000155552709433615"
            iyz="-3.29481748801136E-12"
            izz="0.000258792041913219" />
        </inertial>
    </link>

    <!-- Platform bottom joint:
        Represents the connection between the bottom of the rotating base platform and the ground and 
        provides the height of the base platform. -->
    <joint name="platform" type="revolute">
        <!-- <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/> -->
        <limit lower="0.0" upper="2.4783675" effort="0.0" velocity="0.0"/>
        <origin xyz="0 0 10" rpy="0 3.1415926 0" />
        <parent link="ground" />
        <child link="platform" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- Bone A -->
    <link name="bone_a">
        <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.00558464092794276" />
        <inertia
            ixx="1.34906671319978E-06"
            ixy="-6.75990848930974E-15"
            ixz="-9.2900996309437E-10"
            iyy="2.56110628664785E-06"
            iyz="2.75193579105881E-11"
            izz="2.08267318891963E-06" />
        </inertial>
    </link>

    <!-- Shoulder joint:
        Represents the joint between the platform and bone A. -->
    <joint name="shoulder" type="revolute">
        <origin xyz="22 0 0" rpy="0 0 0"/>
        <parent link="platform" />
        <child link="bone_a" />
        <axis xyz="0 1 0" />
    </joint>
</robot>
